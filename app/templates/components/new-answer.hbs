<div class="container">
  {{#if addNewAnswer}}
    <h1>Post Answer</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="author">User Name</label>
            {{input value=author id="author"}}
          </div>

          <div class="form-group">
            <div>
              <label for="content">Answer</label>
            </div>
            {{textarea class="form-control" rows="3" value=content id="content"}}
          </div>

          <button class="btn btn-info btn-xs"{{action 'saveAnswer'}}>Save</button>
          <button class="btn btn-warning btn-xs"{{action 'formHide'}}>Hide Form</button>
        </form>
      </div>
  {{else}}
    <button class="btn btn-info btn-xs"{{action 'answerFormShow'}}>New Answer</button>
  {{/if}}
</div>
